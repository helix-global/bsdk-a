<Window x:Class="PlatformUISample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlatformUISample"
        xmlns:u="http://schemas.helix.global"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="MainWindow_OnLoaded" WindowState="Maximized"
        TextOptions.TextFormattingMode="Display"
        TextOptions.TextRenderingMode="ClearType">
  <Window.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Controls/Button.xaml"/>
        <ResourceDictionary Source="Controls/ToggleButton.xaml"/>
        <ResourceDictionary Source="Controls/CheckBox.xaml"/>
        <ResourceDictionary Source="Controls/RadioButton.xaml"/>
        <ResourceDictionary Source="Controls/TextBox.xaml"/>
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </Window.Resources>
  <Grid>
    <Grid.Resources>
      <u:ToString x:Key="ToString"/>
    </Grid.Resources>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition/>
    </Grid.RowDefinitions>
    <Menu x:Name="Menu">
      <MenuItem Header="FILE">
        <MenuItem Header="Exit" InputGestureText="Alt-F4"/>
      </MenuItem>
      <MenuItem Header="WINDOW">
        <MenuItem Header="Themes" x:Name="ThemeMenuItem"/>
      </MenuItem>
    </Menu>
    <TabControl Grid.Row="1">
      <TabItem Header="Buttons">
        <Grid>
          <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
          </Grid.ColumnDefinitions>
          <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
          </Grid.RowDefinitions>
          <ContentControl Grid.Column="0" Grid.Row="0" Template="{StaticResource Button}" />
          <ContentControl Grid.Column="0" Grid.Row="1" Template="{StaticResource ToggleButton}"/>
          <ContentControl Grid.Column="0" Grid.Row="2" Template="{StaticResource CheckBox}"/>
          <ContentControl Grid.Column="0" Grid.Row="3" Template="{StaticResource RadioButton}"/>
          <ContentControl Grid.Column="1" Grid.Row="0" Template="{StaticResource TextBox}" Grid.RowSpan="4"/>
